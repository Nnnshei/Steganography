<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/srcImageDecoding"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="50dp"
        android:src="@color/cardview_dark_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/secretKeyDecode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:hint="Введите секретный ключ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/srcImageDecoding" />

    <EditText
        android:id="@+id/messageDecode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:hint="Введите сообщение"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secretKeyDecode" />

    <Button
        android:id="@+id/btnChooseImage"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Выбрать"
        app:layout_constraintEnd_toStartOf="@id/btnDecode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageDecode" />

    <Button
        android:id="@+id/btnDecode"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Расшифровать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnChooseImage"
        app:layout_constraintTop_toBottomOf="@id/messageDecode" />

</androidx.constraintlayout.widget.ConstraintLayout>