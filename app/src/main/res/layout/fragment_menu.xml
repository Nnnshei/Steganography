<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnEncodeScreen"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Зашифровать"
        app:layout_constraintBottom_toTopOf="@id/btnDecodeScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"/>

    <Button
        android:id="@+id/btnDecodeScreen"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Расшифровать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSettingsScreen"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Настройки"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDecodeScreen" />

</androidx.constraintlayout.widget.ConstraintLayout>